---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
    { name: 'Szolgáltatásaim', href: '/szolgaltatasaim' },
    { name: 'Referenciák', href: '/referenciak' },
    { name: 'Folyamat', href: '/folyamat' },
    { name: 'Kapcsolat', href: '/kapcsolat' },
    { name: 'Ajánlatkérés', href: '/arajanlat', highlight: true },
];
---

<header class="fixed w-full bg-white dark:bg-gray-800 backdrop-blur-sm shadow-sm z-50">
    <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between gap-4">
            <a href="/" class="text-2xl font-bold text-blue-600 dark:text-blue-400 shrink-0">WebDev</a>
            
            <div class="hidden md:flex items-center space-x-6 lg:space-x-8 md:ml-8">
                {navItems.map((item) => (
                    <a
                        href={item.href}
                        class:list={[
                            "transition-colors duration-300 whitespace-nowrap",
                            item.highlight 
                                ? "text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-500 font-medium"
                                : "text-gray-600 hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-400"
                        ]}
                    >
                        {item.name}
                    </a>
                ))}
                <div class="pl-4 border-l border-gray-200 dark:border-gray-700">
                    <ThemeToggle />
                </div>
            </div>

            <div class="flex md:hidden items-center gap-2">
                <div class="pl-4 border-l border-gray-200 dark:border-gray-700">
                    <ThemeToggle />
                </div>           
                <button
                    id="mobile-menu-button"
                    class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700"
                    aria-label="Menü"
                >
                    <svg
                        class="w-6 h-6 text-gray-600 dark:text-gray-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"
                        />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile menu -->
        <div
            id="mobile-menu"
            class="hidden md:hidden mt-4 space-y-4 pb-4"
        >
            {navItems.map((item) => (
                <a
                    href={item.href}
                    class:list={[
                        "block px-4 py-2 rounded-lg transition-colors duration-300",
                        item.highlight 
                            ? "text-blue-600 hover:bg-blue-50 dark:text-blue-400 dark:hover:bg-gray-700 font-medium"
                            : "text-gray-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700"
                    ]}
                >
                    {item.name}
                </a>
            ))}
        </div>
    </nav>
</header>

<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
</script>
