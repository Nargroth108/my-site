---
import Icons from './Icons.astro';

interface Advantage {
    title: string;
    description: string;
    icon: string;
}

const advantages: Advantage[] = [
    {
        title: "Modern technológiák",
        description: "A legújabb webes technológiákat használom, hogy weboldala gyors, biztonságos és könnyen karbantartható legyen.",
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`
    },
    {
        title: "Személyes konzultáció",
        description: "Minden projekt egy részletes egyeztetéssel kezdődik, ahol megismerem az Ön igényeit és céljait.",
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />`
    },
    {
        title: "Gyors határidők",
        description: "Hatékonyan dolgozom, hogy weboldala a lehető leghamarabb elkészüljön és elindulhasson az online térben.",
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`
    },
    {
        title: "Kedvező árak",
        description: "Versenyképes árazás és átlátható költségek. Nincsenek rejtett díjak vagy váratlan költségek.",
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`
    },
    {
        title: "Egyedi megoldások",
        description: "Minden weboldal egyedileg készül, az Ön vállalkozásának speciális igényeire szabva.",
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />`
    },
    {
        title: "Folyamatos támogatás",
        description: "A weboldal elkészülte után is számíthat rám. Segítek a karbantartásban és a további fejlesztésekben.",
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />`
    }
];

---

<Icons />

<section class="py-16 bg-gray-100 dark:bg-gray-900">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Miért engem válasszon?
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">
                Tapasztalat, megbízhatóság és személyre szabott megoldások
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {advantages.map(advantage => (
                <div class="relative transform-gpu transition-all duration-200 ease-out group">
                    <div class="absolute inset-0 bg-white dark:bg-gray-800 rounded-xl shadow-lg group-hover:shadow-xl group-hover:scale-[1.02] transition-all duration-200 ease-out"></div>
                    <div class="relative p-6">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-300 transition-colors duration-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <Fragment set:html={advantage.icon} />
                                </svg>
                            </div>
                            <h3 class="text-xl font-semibold text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-300 transition-colors duration-200">
                                {advantage.title}
                            </h3>
                        </div>
                        <p class="text-gray-600 dark:text-gray-300">
                            {advantage.description}
                        </p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<script define:vars={{ advantages }}>
    function copyIcon(iconId) {
        const original = document.getElementById(iconId);
        if (!original) return null;
        return original.cloneNode(true);
    }

    // Insert icons into their containers
    advantages.forEach(advantage => {
        const container = document.getElementById(`${advantage.iconId}-container`);
        if (container) {
            const icon = copyIcon(advantage.iconId);
            if (icon) {
                container.appendChild(icon);
            }
        }
    });
</script>
