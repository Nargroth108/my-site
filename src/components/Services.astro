---
interface Service {
    title: string;
    description: string;
    features: string[];
}

const services: Service[] = [
    {
        title: "Weboldal készítés",
        description: "Modern, reszponzív weboldalak tervezése és fejlesztése, ami tökéletesen működik minden eszközön.",
        features: [
            "Egyedi dizájn az Ön igényei szerint",
            "Mobilbarát felület",
            "SEO-optimalizált felépítés",
            "Gyors betöltési idő"
        ]
    },
    {
        title: "Webshop fejlesztés",
        description: "Professzionális webáruház megoldások, amelyek segítenek termékei online értékesítésében.",
        features: [
            "Biztonságos fizetési rendszer",
            "Készletkezelés",
            "Automatikus számlázás",
            "Szállítási módok integrációja"
        ]
    },
    {
        title: "Landing page készítés",
        description: "Hatékony értékesítési oldalak, amelyek segítenek a látogatókat ügyfelekké konvertálni.",
        features: [
            "Meggyőző szövegírás",
            "A/B tesztelés",
            "Konverzió optimalizálás",
            "Gyors elkészítési idő"
        ]
    }
];
---

<section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Szolgáltatásaim</h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">
                Személyre szabott megoldások az Ön vállalkozásának sikeréért
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {services.map((service) => (
                <div class="relative transform-gpu transition-all duration-200 ease-out group">
                    <div class="absolute inset-0 bg-gray-100 dark:bg-gray-900 rounded-xl shadow-lg group-hover:shadow-xl group-hover:scale-[1.02] transition-all duration-200 ease-out"></div>
                    <div class="relative p-6">
                        <h3 class="text-xl font-semibold text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-300 transition-colors duration-200 mb-4">
                            {service.title}
                        </h3>
                        <p class="text-gray-600 dark:text-gray-300 mb-6">
                            {service.description}
                        </p>
                        <ul class="space-y-2">
                            {service.features.map((feature) => (
                                <li class="flex items-center text-gray-600 dark:text-gray-300">
                                    <svg class="h-5 w-5 text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-300 transition-colors duration-200 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                    {feature}
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>

        <div class="text-center mt-12">
            <a href="/services" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-500 bg-white dark:bg-gray-900 rounded-lg border-2 border-blue-600 dark:border-blue-400 hover:border-blue-700 dark:hover:border-blue-500 transition-colors duration-200">
                További részletek
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
            </a>
        </div>
    </div>
</section>
