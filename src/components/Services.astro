---
interface Service {
    title: string;
    description: string;
    features: string[];
    icon: string;
}

const services: Service[] = [
    {
        title: "Bemutatkozó Weboldal",
        description: "Tökéletes választás, ha szeretné bemutatni vállalkozását az interneten. Egyedi dizájn, reszponzív megjelenés, és optimalizált teljesítmény.",
        features: [
            "Egyedi dizájn az Ön igényei szerint",
            "SEO-optimalizált felépítés",
            "Gyors betöltési idő",
            "Mobilbarát felület",
        ],
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />`
    },
    {
        title: "Webshop",
        description: "Indítsa el online üzletét egy modern, könnyen kezelhető webshoppal. Mobilbarát felület, ami idővel akár egy mobilalkalmazássá is átültethető.",
        features: [
            "Készletkezelés",
            "Automatikus számlázás",
            "Biztonságos fizetési rendszer",
            "Szállítási módok integrációja"
        ],
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />`
    },
    {
        title: "Egyedi Webapp",
        description: "Speciális igényeknek megfelelő webalkalmazások fejlesztése. Ügyfélkezelés, projektmenedzsment, vagy bármilyen egyéb rendszer amire szüksége lehet.",
        features: [
            "Teljesen testre szabott funkciók",
            "Biztonságos adatkezelés",
            "Felhasználóbarát felület",
            "Skálázható megoldások"
        ],
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />`
    } ,
    {
        title: "Discord Bot",
        description: "Egyedi alkalmazások fejlesztése, amelyek automatizálják Discord szervere kezelését és különleges funkciókat biztosítanak a közössége számára.",
        features: [
            "Egyedi parancsok",
            "Automatizált moderálás",
            "Adatgyűjtés és statisztikák",
            "Játékok és szórakoztató funkciók",
        ],
        icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`
    }
];
---

<section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4 py-2">
                Szolgáltatásaim
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">
                Modern webes megoldások minden vállalkozásnak
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 2xl:grid-cols-4 gap-8 max-w-7xl mx-auto">
            {services.map((service) => (
                <div class="relative transform-gpu transition-all duration-200 ease-out group">
                    <div class="absolute inset-0 bg-white dark:bg-gray-900 rounded-xl shadow-lg group-hover:shadow-xl group-hover:scale-[1.02] transition-all duration-200 ease-out"></div>
                    <div class="relative p-6">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-600 transition-colors duration-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <Fragment set:html={service.icon} />
                                </svg>
                            </div>
                            <h3 class="text-xl font-semibold text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-600 transition-colors duration-200">
                                {service.title}
                            </h3>
                        </div>
                        <p class="text-gray-600 dark:text-gray-300 mb-6">
                            {service.description}
                        </p>
                        <ul class="space-y-2">
                            {service.features.map((feature) => (
                                <li class="flex items-center text-gray-600 dark:text-gray-300">
                                    <svg class="w-4 h-4 mr-2 text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-600 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    {feature}
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>


        <div class="text-center mt-12">
            <a href="/szolgaltatasaim" class="inline-flex items-center justify-center px-8 py-2 text-lg font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-500 bg-white dark:bg-gray-900 rounded-lg border-2 border-blue-600 dark:border-blue-400 hover:border-blue-700 dark:hover:border-blue-500 transition-colors duration-200">
                További részletek
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
            </a>
        </div>

    </div>
</section>
