---
import Layout from './Layout.astro';
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<Layout title={title} description={description}>
    <div class="fixed top-0 left-0 right-0 z-50">
        <Navigation />
    </div>
    <div class="pt-24">
        <slot />
    </div>
</Layout>
