---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';

interface Project {
    title: string;
    description: string;
    type: string;
    image: string;
    technologies: string[];
    link?: string;
}

const projects: Project[] = [
    {
        title: "Példa Webshop",
        description: "Modern webshop kézműves termékek számára. Egyedi design, reszponzív felület, és könnyen kezelhető adminisztrációs felület.",
        type: "Webshop",
        image: "/placeholder-1.jpg",
        technologies: ["Astro", "React", "TailwindCSS", "Stripe"],
        link: "#"
    },
    {
        title: "Étterem Weboldal",
        description: "Elegáns weboldal egy fine dining étterem számára. Online asztalfoglalás, menü kezelés, és esemény naptár.",
        type: "Weboldal",
        image: "/placeholder-2.jpg",
        technologies: ["Astro", "TailwindCSS", "Web3Forms"],
        link: "#"
    },
    {
        title: "Rendezvény Alkalmazás",
        description: "Webalkalmazás rendezvények szervezéséhez és jegyértékesítéshez. Valós idejű foglalási rendszer.",
        type: "Webalkalmazás",
        image: "/placeholder-3.jpg",
        technologies: ["React", "Node.js", "MongoDB", "Stripe"],
        link: "#"
    },
    {
        title: "Gaming Discord Bot",
        description: "Egyedi Discord bot játékszerver menedzseléséhez. Automatikus rangok, játék statisztikák és esemény szervezés.",
        type: "Discord Bot",
        image: "/placeholder-4.jpg",
        technologies: ["TypeScript", "Discord.js", "PostgreSQL"],
        link: "#"
    },
    {
        title: "Ingatlan Portál",
        description: "Modern ingatlan kereső és hirdető platform. Részletes keresési opciók, interaktív térkép, és automatikus értesítések.",
        type: "Webalkalmazás",
        image: "/placeholder-5.jpg",
        technologies: ["Next.js", "Prisma", "MapBox", "TailwindCSS"],
        link: "#"
    },
    {
        title: "Fitness Alkalmazás",
        description: "Személyi edzők és klienseik számára készült alkalmazás. Edzéstervek, haladáskövetés, és automatikus jelentések.",
        type: "Webalkalmazás",
        image: "/placeholder-6.jpg",
        technologies: ["React Native", "Firebase", "Node.js"],
        link: "#"
    }
];
---

<BaseLayout 
    title="Referenciák" 
    description="Korábbi munkáim és projektek bemutatása. Weboldalak, webshopok és egyedi alkalmazások."
>
    <main class="min-h-screen bg-gradient-to-b from-gray-50 to-blue-50 dark:from-gray-900 dark:to-gray-800">
        <div class="container mx-auto px-4 pb-12">
            <!-- Header Section -->
            <div class="text-center mb-16 py-2">
                <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4">
                    Referenciák
                </h1>
                <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                    Az itt található projektek csak példák. Hamarosan valódi munkákkal töltöm fel ezt az oldalt.
                    Addig is tekintse meg szolgáltatásaimat, vagy keressen fel egy személyes konzultációért!
                </p>
            </div>

            <!-- Projects Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {projects.map((project) => (
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:scale-[1.02] transition-all duration-300">
                        <div class="aspect-video bg-gray-100 dark:bg-gray-700 relative overflow-hidden">
                            <div class="absolute inset-0 flex items-center justify-center text-gray-400 dark:text-gray-500">
                                <span class="text-sm">Kép helye</span>
                            </div>
                        </div>
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-3">
                                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                                    {project.title}
                                </h3>
                                <span class="px-3 py-1 text-sm bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full">
                                    {project.type}
                                </span>
                            </div>
                            <p class="text-gray-600 dark:text-gray-300 mb-4">
                                {project.description}
                            </p>
                            <div class="flex flex-wrap gap-2 mb-4">
                                {project.technologies.map((tech) => (
                                    <span class="px-2 py-1 text-sm bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded">
                                        {tech}
                                    </span>
                                ))}
                            </div>
                            <a 
                                href={project.link} 
                                class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline"
                            >
                                Részletek
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </a>
                        </div>
                    </div>
                ))}
            </div>

            <CTASection
                title="Szeretne Ön is egy hasonló projektet?"
                description="Keressen fel elképzeléseivel, és valósítsuk meg őket együtt!"
            />
        </div>
    </main>
</BaseLayout>
