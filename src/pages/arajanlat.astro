---
import BaseLayout from '../layouts/BaseLayout.astro';
import Popup from '../components/Popup.astro';
---

<BaseLayout 
    title="Ingyenes árajánlatkérés" 
    description="Kérjen ingyenes árajánlatot webes projektjéhez. Személyre szabott megoldások, transzparens árazás."
>
    <Popup show={false} type="success" message="Köszönöm az ajánlatkérést! Hamarosan felveszem Önnel a kapcsolatot." client:load />
    
    <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
        <div class="container mx-auto px-4">
            <div class="max-w-2xl mx-auto">
                <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4 py-2 text-center">
                    Ingyenes árajánlatkérés
                </h1>
                <p class="text-center text-gray-600 dark:text-gray-300 mb-8">
                    Az űrlap beküldése után 1-3 munkanapon belül felveszem Önnel a kapcsolatot a részletek egyeztetése céljából.
                </p>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
                    <form id="quoteForm" class="space-y-6">
                        <!-- Kapcsolattartó adatok -->
                        <div>
                            <h2 class="text-xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4 py-2">
                                Kapcsolattartó adatok
                            </h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Név*</label>
                                    <input
                                        type="text"
                                        id="name"
                                        name="name"
                                        required
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    />
                                </div>
                                <div>
                                    <label for="company" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Cég neve</label>
                                    <input
                                        type="text"
                                        id="company"
                                        name="company"
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    />
                                </div>
                                <div>
                                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email cím*</label>
                                    <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        required
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    />
                                </div>
                                <div>
                                    <label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Telefonszám</label>
                                    <input
                                        type="tel"
                                        id="phone"
                                        name="phone"
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    />
                                </div>
                            </div>
                        </div>

                        <!-- Projekt részletek -->
                        <div>
                            <h2 class="text-xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4 py-2">
                                Projekt részletek
                            </h2>
                            <div class="space-y-6">
                                <div>
                                    <label for="projectType" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Projekt típusa*</label>
                                    <select
                                        id="projectType"
                                        name="projectType"
                                        required
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    >
                                        <option value="">Válasszon...</option>
                                        <option value="website">Weboldal készítés</option>
                                        <option value="update">Weboldal frissítés vagy karbantartás</option>
                                        <option value="webshop">Webshop készítés</option>
                                        <option value="webapp">Egyedi webapp készítés</option>
                                        <option value="discord">Discord bot fejlesztés</option>
                                        <option value="other">Egyéb</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="budget" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Tervezett budget</label>
                                    <select
                                        id="budget"
                                        name="budget"
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    >
                                        <option value="">Válasszon...</option>
                                        <option value="tiny">100 ezer Ft alatt</option>
                                        <option value="small">100-250 ezer Ft</option>
                                        <option value="medium">250-500 ezer Ft</option>
                                        <option value="large">500 ezer Ft felett</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="timeline" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Tervezett időkeret</label>
                                    <select
                                        id="timeline"
                                        name="timeline"
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    >
                                        <option value="">Válasszon...</option>
                                        <option value="quick">Max. 1 hét</option>
                                        <option value="normal">1-2 hét</option>
                                        <option value="extended">2-4 hét</option>
                                        <option value="flexible">1-2 hónap</option>
                                        <option value="flexible">Rugalmas</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Projekt leírása*</label>
                                    <textarea
                                        id="description"
                                        name="description"
                                        required
                                        rows="4"
                                        placeholder="Írja le röviden a projekt célját, annak főbb funkcióit, valamint saját elvárásait és elképzeléseit..."
                                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"
                                    ></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- GDPR Consent -->
                        <div class="space-y-4">
                            <div class="flex items-start">
                                <div class="flex items-center h-5">
                                    <input
                                        id="privacy"
                                        name="privacy"
                                        type="checkbox"
                                        required
                                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                                    />
                                </div>
                                <div class="ml-3">
                                    <label for="privacy" class="text-sm text-gray-700 dark:text-gray-300">
                                        Elfogadom az <a href="/adatkezeles" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">Adatkezelési tájékoztatót</a>*
                                    </label>
                                </div>
                            </div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                A *-gal jelölt mezők kitöltése kötelező. Az adatait bizalmasan kezelem és kizárólag az árajánlat elkészítéséhez használom fel.
                            </p>
                        </div>

                        <!-- Submit Button -->
                        <div class="flex justify-center">
                            <button
                                type="submit"
                                class="w-full px-8 py-3 text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
                            >
                                Ajánlatkérés küldése
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</BaseLayout>

<script>
    const form = document.querySelector('form');
    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        try {
            const response = await fetch('https://api.web3forms.com/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({
                    access_key: 'ac235d36-01ad-429e-99f6-8a6a20806b59', // You'll need to sign up at web3forms.com
                    ...data,
                    subject: `Új ajánlatkérés - ${data.name}`,
                })
            });
            
            if (response.ok) {
                // Show success popup
                const event = new CustomEvent('showPopup', { 
                    detail: { 
                        type: 'success' as const, 
                        message: 'Köszönöm az ajánlatkérést! Hamarosan felveszem Önnel a kapcsolatot.' 
                    }
                });
                document.dispatchEvent(event);
                
                // Reset form
                form.reset();
            } else {
                throw new Error('Hiba történt a küldés során');
            }
        } catch (error) {
            // Show error popup
            const event = new CustomEvent('showPopup', { 
                detail: { 
                    type: 'error' as const, 
                    message: 'Hiba történt a küldés során. Kérjük, próbálja újra később.' 
                }
            });
            document.dispatchEvent(event);
        }
    });
</script>
