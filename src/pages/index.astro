---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import WhyWebsite from '../components/WhyWebsite.astro';
import Advantages from '../components/Advantages.astro';
import Services from '../components/Services.astro';
import BottomCTA from '../components/BottomCTA.astro';

const title = "WebDev - Modern weboldalak kisvállalkozásoknak";
const description = "Professzionális webfejlesztési szolgáltatások magyarországi vállalkozások számára. Modern, reszponzív weboldalak készítése kedvező áron.";
---

<Layout title={title} description={description}>
    <Navigation />
    <main>
        <Hero />
        <WhyWebsite />
        <Advantages />
        <Services />
        <BottomCTA />
    </main>
</Layout>
